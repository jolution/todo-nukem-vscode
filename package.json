{
  "name": "todo-nukem-vscode",
  "displayName": "TODO NUKEM",
  "author": "jolution",
  "publisher": "jolution",
  "repository": "https://github.com/jolution/todo-nukem-vscode",
  "bugs": "https://github.com/jolution/todo-nukem/issues",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#e8bf28",
    "theme": "dark"
  },
  "description": "TODO NUKEM - A VSCode extension for creating and managing TODO NUKEM comments with filters and snippets",
  "version": "0.4.3",
  "engines": {
    "vscode": "^1.88.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "npm version patch --no-git-tag-version && npm run compile && npx vsce package",
    "publish": "npx vsce publish",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. .",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "export-l10n": "npx @vscode/l10n-dev export -o ./l10n ./src"
  },
  "l10n": "./l10n",
  "license": "SEE LICENSE IN LICENSE.md",
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "onCommand:todoNukem.insertTodo",
    "onCommand:todoNukem.showTodos",
    "onView:todoNukemView"
  ],
  "main": "./out/extension.js",
  "tags": [
    "typescript",
    "javascript",
    "snippet",
    "documentation"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "todoNukem",
          "title": "TODO NUKEM",
          "icon": "images/todonukem-mono.svg"
        }
      ]
    },
    "views": {
      "todoNukem": [
        {
          "id": "todoNukemView",
          "name": "TODOs"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "todoNukem.refresh",
          "when": "view == todoNukemView",
          "group": "navigation"
        },
        {
          "command": "todoNukem.filterByPriority",
          "when": "view == todoNukemView",
          "group": "navigation"
        },
        {
          "command": "todoNukem.filterByType",
          "when": "view == todoNukemView",
          "group": "navigation"
        },
        {
          "command": "todoNukem.filterByContext",
          "when": "view == todoNukemView",
          "group": "navigation"
        },
        {
          "command": "todoNukem.filterByAssignee",
          "when": "view == todoNukemView",
          "group": "navigation"
        },
        {
          "command": "todoNukem.filterByAuthor",
          "when": "view == todoNukemView",
          "group": "navigation"
        },
        {
          "command": "todoNukem.toggleDecorations",
          "when": "view == todoNukemView",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "todoNukem.insertTodo",
        "title": "TODO NUKEM - Comment"
      },
      {
        "command": "todoNukem.showTodos",
        "title": "TODO NUKEM - Show TODOs"
      },
      {
        "command": "todoNukem.refresh",
        "title": "Refresh TODOs",
        "icon": "$(refresh)"
      },
      {
        "command": "todoNukem.filterByPriority",
        "title": "Filter by Priority",
        "icon": "$(list-ordered)"
      },
      {
        "command": "todoNukem.filterByType",
        "title": "Filter by Type",
        "icon": "$(symbol-class)"
      },
      {
        "command": "todoNukem.filterByContext",
        "title": "Filter by Context",
        "icon": "$(tag)"
      },
      {
        "command": "todoNukem.filterByAssignee",
        "title": "Filter by Assignee",
        "icon": "$(person)"
      },
      {
        "command": "todoNukem.filterByAuthor",
        "title": "Filter by Author",
        "icon": "$(edit)"
      },
      {
        "command": "todoNukem.toggleDecorations",
        "title": "Toggle Emoji Decorations",
        "icon": "$(eye)"
      },
      {
        "command": "todoNukem.refreshConfig",
        "title": "TODO NUKEM - Reload Config",
        "icon": "$(refresh)"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/snippets-line-comment.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/snippets-line-comment.json"
      },
      {
        "language": "css",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "postcss",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "scss",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "less",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "html",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "python",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "java",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "csharp",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "cpp",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "ruby",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "swift",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "php",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "go",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "rust",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "dart",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "perl",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "lua",
        "path": "./snippets/snippets-block-comment.json"
      },
      {
        "language": "shellscript",
        "path": "./snippets/snippets-block-comment.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.88.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-web": "^0.0.76",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.9.3"
  }
}
