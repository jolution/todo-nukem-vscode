{
    "TODO NUKEM Emmet Snippets": {
        "prefix": ["todo"],
        "body": "$LINE_COMMENT TODO: ${1|[low],[medium],[high]|} ${2|[feature],[fix]|} ${3|[design],[doc],[test],[perf],[lang],[sec],[update],[optimize],[review]|} ${0}",
        "description": "%snippetTodoDescription%"
    },
    "TODO NUKEM Fixme": {
        "prefix": ["fixme"],
        "body": "$LINE_COMMENT FIXME: ${1|[low],[medium],[high]|} [fix] ${3|[design],[doc],[test],[perf],[lang],[sec],[update],[optimize],[review]|} ${0}",
        "description": "%snippetFixmeDescription%"
    },
	"TODO NUKEM Scope": {
        "prefix": ["todo-scope"],
        "body": "[scope: ${TM_FILENAME_BASE/(^|-)([a-z])/${2:/capitalize}/g}]",
        "description": "%snippetScopeDescription%"
    },
	"TODO NUKEM TBD": {
        "prefix": ["todo-tbd"],
        "body": "[tbd]",
        "description": "%snippetTbdDescription%"
    },
    "TODO NUKEM MHD": {
        "prefix": ["todo-mhd"],
        "body": "[until: ${1:${CURRENT_YEAR}-${CURRENT_MONTH}-${CURRENT_DATE}}${0}]",
        "description": "%snippetMhdDescription%"
    }
 }
